<?xml version="1.0" encoding="utf-8"?>
    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        tools:context=".fragments.AchievementsMainFragment"
    android:background="@drawable/achievsback">

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/glSeparationBegin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent=".1"/>

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/glSeparationEnd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent=".9"/>

        <TextView
            android:id="@+id/tvGameVocales1"
            android:text="Completar 10 juegos de Vocales"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/pottaone_regular"
            android:textColor="@color/white"
            app:layout_constraintStart_toStartOf="@id/glSeparationBegin"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="10dp"/>

        <ProgressBar
            android:id="@+id/pbGameVocales1"
            style="@android:style/Widget.ProgressBar.Horizontal"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/tvGameVocales1"
            app:layout_constraintStart_toStartOf="@+id/glSeparationBegin"
            app:layout_constraintEnd_toEndOf="@+id/glSeparationEnd"
            android:progress="50"
            android:layout_marginBottom="10dp"
            android:progressTint="@color/purple_1"
            android:progressBackgroundTint="@color/white"/>

        <TextView
            android:id="@+id/tvGameVocales2"
            android:text="Completar 25 juegos de Vocales"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/pottaone_regular"
            android:textColor="@color/white"
            app:layout_constraintStart_toStartOf="@id/glSeparationBegin"
            app:layout_constraintTop_toBottomOf="@id/pbGameVocales1"
            android:layout_marginTop="10dp"
            />

        <ProgressBar
            android:id="@+id/pbGameVocales2"
            style="@android:style/Widget.ProgressBar.Horizontal"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/tvGameVocales2"
            app:layout_constraintStart_toStartOf="@+id/glSeparationBegin"
            app:layout_constraintEnd_toEndOf="@+id/glSeparationEnd"
            android:progress="20"
            android:layout_marginBottom="10dp"
            android:progressTint="@color/purple_1"
            android:progressBackgroundTint="@color/white"/>

    <TextView
        android:id="@+id/tvGameVocales3"
        android:text="Completar 40 juegos de Vocales"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/pottaone_regular"
        android:textColor="@color/white"
        app:layout_constraintStart_toStartOf="@id/glSeparationBegin"
        app:layout_constraintTop_toBottomOf="@id/pbGameVocales2"
        android:layout_marginTop="10dp"/>

    <ProgressBar
        android:id="@+id/pbGameVocales3"
        style="@android:style/Widget.ProgressBar.Horizontal"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/tvGameVocales3"
        app:layout_constraintStart_toStartOf="@+id/glSeparationBegin"
        app:layout_constraintEnd_toEndOf="@+id/glSeparationEnd"
        android:progress="12"
        android:layout_marginBottom="10dp"
        android:progressTint="@color/purple_1"
        android:progressBackgroundTint="@color/white"
        />

</androidx.constraintlayout.widget.ConstraintLayout>